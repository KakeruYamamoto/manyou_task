<p id="notice"><%= notice %></p>

<p>
  <strong>User name:</strong>
  <%= @user.user_name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<p>
  <strong>Password:</strong>
  <%= @user.password_digest %>
</p>

<p>
  <strong>Admin:</strong>
  <%= @user.admin %>
</p>

<% if  logged_in? %>
  <% if @user.id == current_user.id %>
  <%= link_to '編集', edit_user_path(@user) %>
  <% end %>
  <% if  current_user.admin == true %>
    <%= link_to '管理ページ', admin_users_path %>

  <% end %>
<% end %>
